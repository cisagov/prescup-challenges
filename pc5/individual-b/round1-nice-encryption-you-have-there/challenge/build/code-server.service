[Unit]
Description=Code Server Startup
After=network.target

[Service]
Type=simple
User=user
WorkingDirectory=/home/user/code
ExecStart=/home/user/code/target/release/server
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
